#!/sbin/openrc-run
command=shithouse_tv
pidfile=/var/run/shithouse.pid
name="shithouse.tv"

start() {
  ebegin "Starting $name"
  start-stop-daemon -b -r /srv/shithouse --start --exec $command \
    --pidfile $pidfile
  eend $?
}

stop() {
  ebegin "Stopping $name"
  start-stop-daemon -b -r /srv/shithouse --stop --exec $command \
    --pidfile $pidfile
  eend $?
}
